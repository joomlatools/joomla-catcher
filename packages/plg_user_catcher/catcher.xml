<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="user" method="upgrade">
    <name>plg_user_catcher</name>
    <author>Timble</author>
    <creationDate>September 2014</creationDate>
    <copyright>Copyright (C) 2014 Timble CVBA</copyright>
    <license>GNU GPLv3 - http://www.gnu.org/licenses/gpl.html</license>
    <url>https://github.com/nooku/joomla-catcher</url>
    <authorEmail>info@timble.net</authorEmail>
    <authorUrl>www.timble.net</authorUrl>
    <version>1.0.2</version>
    <description>PLG_USER_CATCHER_XML_DESCRIPTION</description>

    <files>
        <filename plugin="catcher">catcher.php</filename>
        <folder>language</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field type="radio" name="show_data" class="btn-group" label="SHOW_DATA_LABEL" description="SHOW_DATA_DESC" default="1">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field type="checkboxes" class="checkbox" name="events" label="EVENTS_LABEL" description="EVENTS_DESC">
                    <option value="onUserBeforeSave">onUserBeforeSave</option>
                    <option value="onUserAfterSave">onUserAfterSave</option>
                    <option value="onUserBeforeDelete">onUserBeforeDelete</option>
                    <option value="onUserAfterDelete">onUserAfterDelete</option>
                    <option value="onUserBeforeSaveGroup">onUserBeforeSaveGroup</option>
                    <option value="onUserAfterSaveGroup">onUserAfterSaveGroup</option>
                    <option value="onUserBeforeDeleteGroup">onUserBeforeDeleteGroup</option>
                    <option value="onUserAfterDeleteGroup">onUserAfterDeleteGroup</option>
                    <option value="onUserLogin">onUserLogin</option>
                    <option value="onUserLoginFailure">onUserLoginFailure</option>
                    <option value="onUserAfterLogin">onUserAfterLogin</option>
                    <option value="onUserLogout">onUserLogout</option>
                    <option value="onUserAfterLogout">onUserAfterLogout</option>
                    <option value="onUserLogoutFailure">onUserLogoutFailure</option>
                    <option value="onUserAuthorisation">onUserAuthorisation</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
